# Environment variables for Career Disha Backend

# Database - Updated with correct password
DATABASE_URL="postgresql://postgres:Yash@123@localhost:5432/careerdisha_dev"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# AI Services
GEMINI_API_KEY="your-google-ai-api-key"
HUGGING_FACE_API_KEY="your-hf-api-key"

# External API Keys
COURSERA_API_KEY="your-coursera-api-key"
UDEMY_CLIENT_ID="your-udemy-client-id"
UDEMY_CLIENT_SECRET="your-udemy-client-secret"
EDX_API_KEY="your-edx-api-key"
ADZUNA_APP_ID="your-adzuna-app-id"
ADZUNA_APP_KEY="your-adzuna-app-key"

# Optional: Error Tracking
SENTRY_DSN="your-sentry-dsn"

# Optional: Email Notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Optional: Redis (for caching/sessions) - DISABLED FOR DEVELOPMENT
# REDIS_URL="redis://localhost:6379"

# Server Configuration
NODE_ENV="development"
PORT="3000"
ALLOWED_DOMAINS="http://localhost:3000,http://localhost:5173"

# File Upload Limits
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Google Cloud Storage
GCS_BUCKET_NAME="your-bucket-name"
GCP_PROJECT_ID="your-gcp-project-id"
